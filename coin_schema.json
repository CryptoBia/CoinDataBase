{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[A-Za-z][A-Za-z ]+[A-Za-z]$"
        },
        "symbol": {
            "type": "string",
            "pattern": "^[A-Z]{3,10}$"
        },
        "website_url": {
            "$ref": "#/definitions/list-of-urls"
        },
        "blockchain_explorer_url": {
            "$ref": "#/definitions/list-of-urls"
        },
        "nodes_explorer_url": {
            "$ref": "#/definitions/list-of-urls"
        },
        "message_board_url": {
            "$ref": "#/definitions/list-of-urls"
        },
        "twitter_url": {
            "$ref": "#/definitions/list-of-urls"
        },
        "reddit_url": {
            "$ref": "#/definitions/list-of-urls"
        },
        "repo_url": {
            "$ref": "#/definitions/list-of-urls"
        },
        "whitepaper_url": {
            "$ref": "#/definitions/list-of-urls"
        },
        "max_supply": {
            "$ref": "#/definitions/extended_number"
        },
        "genesis_block_date": {
            "type": "string"
        },
        "proof_type": {
            "oneOf": [
                {"$ref": "#/definitions/proof_type"},
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/defintions/proof_type"
                    }
                },
                {
                    "type": "string",
                    "enum": ["NA", "?"]
                }
            ]
        },
        "hash_algo": {
            "type": "string"
        },
        "block_time": {
            "$ref": "#/definitions/extended_number"
        },
        "tx_min_fee": {
            "$ref": "#/definitions/extended_number"
        },
        "block_size": {
            "$ref": "#/definitions/data_size"
        },
        "block_reward": {
            "$ref": "#/definitions/extended_number"
        },
        "anonymous": {
            "$ref": "#/definitions/extended_boolean"
        },
        "tx_per_second": {
            "$ref": "#/definitions/extended_number"
        },
        "core_lang": {
            "type": "string"
        },
        "masternode": {
            "$ref": "#/definitions/extended_boolean"
        },
        "masternode_supply": {
            "$ref": "#/definitions/extended_number"
        },
        "smart_contracts": {
            "$ref": "#/definitions/extended_boolean"
        },
        "lightning_network": {
            "$ref": "#/definitions/extended_boolean"
        },
        "references": {
            "type": "object",
            "properties": {
                "name": {"$ref": "#/definitions/list-of-urls"},
                "symbol": {"$ref": "#/definitions/list-of-urls"},
                "website_url": {"$ref": "#/definitions/list-of-urls"},
                "blockchain_explorer_url": {"$ref": "#/definitions/list-of-urls"},
                "nodes_explorer_url": {"$ref": "#/definitions/list-of-urls"},
                "message_board_url": {"$ref": "#/definitions/list-of-urls"},
                "twitter_url": {"$ref": "#/definitions/list-of-urls"},
                "reddit_url": {"$ref": "#/definitions/list-of-urls"},
                "repo_url": {"$ref": "#/definitions/list-of-urls"},
                "whitepaper_url": {"$ref": "#/definitions/list-of-urls"},
                "max_supply": {"$ref": "#/definitions/list-of-urls"},
                "genesis_block_date": {"$ref": "#/definitions/list-of-urls"},
                "proof_type": {"$ref": "#/definitions/list-of-urls"},
                "hash_algo": {"$ref": "#/definitions/list-of-urls"},
                "block_time": {"$ref": "#/definitions/list-of-urls"},
                "block_size": {"$ref": "#/definitions/list-of-urls"},
                "block_reward": {"$ref": "#/definitions/list-of-urls"},
                "anonymous": {"$ref": "#/definitions/list-of-urls"},
                "tx_per_second": {"$ref": "#/definitions/list-of-urls"},
                "core_lang": {"$ref": "#/definitions/list-of-urls"},
                "masternode": {"$ref": "#/definitions/list-of-urls"},
                "masternode_supply": {"$ref": "#/definitions/list-of-urls"},
                "smart_contracts": {"$ref": "#/definitions/list-of-urls"},
                "lightning_network": {"$ref": "#/definitions/list-of-urls"},
                "tx_min_fee": {"$ref": "#/definitions/list-of-urls"}
            },
            "additionalProperties": false
        }
    },
    "definitions": {
        "extended_number": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "pattern": "^\\d+(K|M|B)"
                },
                {
                    "type": "string",
                    "enum": ["NA", "?", "Inf"]
                }
            ]
        },
        "extended_boolean": {
            "oneOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "string",
                    "enum": ["NA", "?"]
                }
            ]
        },
        "data_size": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "pattern": "^\\d+(KB|MB|GB)"
                },
                {
                    "type": "string",
                    "enum": ["NA", "?", "Inf"]
                }
            ]
        },
        "proof_type": {
            "type": "string",
            "enum": ["proof-of-work", "proof-of-stake"]
        },
        "list-of-urls": {
            "type": "array",
            "minItems": 0,
            "maxItems": 3,
            "items": {
                "type": "string",
                "pattern": "^https?://.+"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "symbol",
        "website_url",
        "blockchain_explorer_url",
        "nodes_explorer_url",
        "message_board_url",
        "twitter_url",
        "reddit_url",
        "repo_url",
        "whitepaper_url",
        "max_supply",
        "genesis_block_date",
        "proof_type",
        "hash_algo",
        "block_time",
        "block_size",
        "block_reward",
        "anonymous",
        "tx_per_second",
        "core_lang",
        "masternode",
        "masternode_supply",
        "smart_contracts",
        "lightning_network",
        "tx_min_fee",
        "references"
    ]
}

